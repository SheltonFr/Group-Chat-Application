<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SignFragment"
    android:paddingHorizontal="20dp"
    tools:showIn="@layout/activity_auth">


    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:hint="Enter Username"
        android:backgroundTint="#CEFFFFFF"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/baseline_alternate_email_24"
        android:textColorHint="#9EFFFFFF"/>

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:textColor="@color/white"
        android:backgroundTint="#CEFFFFFF"
        android:drawablePadding="5dp"
        android:layout_below="@id/emailInput"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:textColorHint="#9EFFFFFF"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginBtn"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_below="@id/passwordInput"
        android:text="Logi In"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_rounded_shape" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/loginBtn"
        android:textColor="@color/white"
        android:text="Don't have an Account?"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>